# =============================================================================
# TaskSteer Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite database file path (relative to pms-app directory)
DATABASE_URL="file:./prisma/tasksteer.db"

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV="production"
PORT=3000

# Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
# Region for AWS services (Comprehend, etc.)
# Credentials are loaded automatically from EC2 instance role
# DO NOT add AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY here
AWS_REGION="us-east-1"

# -----------------------------------------------------------------------------
# Email Integration (Optional)
# -----------------------------------------------------------------------------
# Microsoft Outlook OAuth (if using Outlook integration)
# OUTLOOK_CLIENT_ID=""
# OUTLOOK_CLIENT_SECRET=""
# OUTLOOK_REDIRECT_URI="https://yourdomain.com/api/auth/outlook/callback"

# IMAP Configuration (if using direct IMAP)
# IMAP_HOST=""
# IMAP_PORT=993
# IMAP_USER=""
# IMAP_PASSWORD=""
# IMAP_TLS=true

# -----------------------------------------------------------------------------
# Security (Optional)
# -----------------------------------------------------------------------------
# Session secret for cookie signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# SESSION_SECRET=""

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable AWS Comprehend for email analysis
# Set to "false" to use fallback local analysis
ENABLE_AI_ANALYSIS="true"
